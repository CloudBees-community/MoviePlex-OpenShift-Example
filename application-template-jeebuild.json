{
    "apiVersion": "v1beta1",
    "description": "This example shows how to create a simple jee application in openshift origin v3",
    "items": [
        {
            "apiVersion": "v1beta1",
            "containerPort": 8080,
            "id": "frontend",
            "kind": "Service",
            "port": 8080,
            "selector": {
                "name": "frontend"
            }
        },
        {
            "apiVersion": "v1beta1",
            "kind": "ImageStream",
            "metadata": {
                "name": "origin-jee-sample"
            }
        },
        {
            "apiVersion": "v1beta1",
            "kind": "ImageStream",
            "metadata": {
                "name": "wildfly-8-centos"
            },
            "spec": {
                "dockerImageRepository": "openshift/wildfly-8-centos"
            }
        },
        {
            "apiVersion": "v1beta1",
            "kind": "BuildConfig",
            "labels": {
                "name": "jee-sample-build"
            },
            "metadata": {
                "name": "jee-sample-build"
            },
            "parameters": {
                "output": {
                    "to": {
                        "name": "origin-jee-sample"
                    }
                },
                "source": {
                    "git": {
                        "uri": "git://github.com/bparees/javaee7-hol.git"
                    },
                    "type": "Git"
                },
                "strategy": {
                    "stiStrategy": {
                        "image": "openshift/wildfly-8-centos"
                    },
                    "type": "STI"
                }
            },
            "triggers": [
                {
                    "github": {
                        "secret": "secret101"
                    },
                    "type": "github"
                },
                {
                    "generic": {
                        "secret": "secret101"
                    },
                    "type": "generic"
                },
                {
                    "imageChange": {
                        "from": {
                            "name": "wildfly-8-centos"
                        },
                        "image": "openshift/wildfly-8-centos",
                        "tag": "latest"
                    },
                    "type": "imageChange"
                }
            ]
        },
        {
            "apiVersion": "v1beta1",
            "kind": "DeploymentConfig",
            "metadata": {
                "name": "frontend"
            },
            "template": {
                "controllerTemplate": {
                    "podTemplate": {
                        "desiredState": {
                            "manifest": {
                                "containers": [
                                    {
                                        "env": [
                                            {
                                                "name": "MYSQL_USER",
                                                "value": "${MYSQL_USER}"
                                            },
                                            {
                                                "name": "MYSQL_PASSWORD",
                                                "value": "${MYSQL_PASSWORD}"
                                            },
                                            {
                                                "name": "MYSQL_ROOT_PASSWORD",
                                                "value": "${MYSQL_ROOT_PASSWORD}"
                                            },
                                            {
                                                "name": "MYSQL_DATABASE",
                                                "value": "${MYSQL_DATABASE}"
                                            },
                                            {
                                                "name": "MYSQL_DB_NAME",
                                                "value": "${MYSQL_DATABASE}"
                                            }
                                        ],
                                        "image": "origin-jee-sample",
                                        "name": "jee-sample",
                                        "ports": [
                                            {
                                                "containerPort": 8080
                                            }
                                        ]
                                    }
                                ],
                                "version": "v1beta1"
                            }
                        },
                        "labels": {
                            "name": "frontend"
                        }
                    },
                    "replicaSelector": {
                        "name": "frontend"
                    },
                    "replicas": 1
                },
                "strategy": {
                    "type": "Recreate"
                }
            },
            "triggers": [
                {
                    "imageChangeParams": {
                        "automatic": true,
                        "containerNames": [
                            "jee-sample"
                        ],
                        "from": {
                            "name": "origin-jee-sample"
                        },
                        "tag": "latest"
                    },
                    "type": "ImageChange"
                }
            ]
        },
        {
            "apiVersion": "v1beta1",
            "containerPort": 3306,
            "id": "mysql",
            "kind": "Service",
            "port": 3306,
            "selector": {
                "name": "database"
            }
        },
        {
            "apiVersion": "v1beta1",
            "kind": "DeploymentConfig",
            "metadata": {
                "name": "database"
            },
            "template": {
                "controllerTemplate": {
                    "podTemplate": {
                        "desiredState": {
                            "manifest": {
                                "containers": [
                                    {
                                        "env": [
                                            {
                                                "name": "MYSQL_USER",
                                                "value": "${MYSQL_USER}"
                                            },
                                            {
                                                "name": "MYSQL_PASSWORD",
                                                "value": "${MYSQL_PASSWORD}"
                                            },
                                            {
                                                "name": "MYSQL_ROOT_PASSWORD",
                                                "value": "${MYSQL_ROOT_PASSWORD}"
                                            },
                                            {
                                                "name": "MYSQL_DATABASE",
                                                "value": "${MYSQL_DATABASE}"
                                            }
                                        ],
                                        "image": "mysql",
                                        "name": "jee-database",
                                        "ports": [
                                            {
                                                "containerPort": 3306
                                            }
                                        ]
                                    }
                                ],
                                "version": "v1beta1"
                            }
                        },
                        "labels": {
                            "name": "database"
                        }
                    },
                    "replicaSelector": {
                        "name": "database"
                    },
                    "replicas": 1
                },
                "strategy": {
                    "type": "Recreate"
                }
            },
            "triggers": [
                {
                    "type": "ConfigChange"
                }
            ]
        }
    ],
    "kind": "Template",
    "metadata": {
        "name": "jee-sample"
    },
    "parameters": [
        {
            "description": "administrator username",
            "name": "MYSQL_USER",
            "value": "mysql"
        },
        {
            "description": "administrator password",
            "name": "MYSQL_PASSWORD",
            "value": "mysql"
        },
        {
            "description": "database password",
            "name": "MYSQL_ROOT_PASSWORD",
            "value": "supersecret"
        },
        {
            "description": "database name",
            "name": "MYSQL_DATABASE",
            "value": "sample"
        }
    ]
}
